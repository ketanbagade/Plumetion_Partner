<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.RegistrationFragment"
    android:padding="10dp"
    android:layout_margin="10dp"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:layout_weight="1"
        app:cardCornerRadius="20dp"
        android:backgroundTint="#B0E7EF"
        app:cardElevation="10dp"

        >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="10dp">

    <TextView
        android:layout_marginTop="30dp"
        android:layout_marginBottom="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Create a new account"
        android:textColor="@color/filter_seek_bar_color"
        android:textSize="18sp"
        android:gravity="center_horizontal"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Full Name"
        android:inputType="textCapCharacters"
        android:textColorHint="@color/filter_seek_bar_color"
        android:id="@+id/nameInput"/>


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Email"
        android:textColorHint="@color/filter_seek_bar_color"
        android:inputType="textEmailAddress"
        android:id="@+id/emailInput"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Phone"
        android:textColorHint="@color/filter_seek_bar_color"
        android:inputType="number"
        android:id="@+id/phoneInput"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Password"
        android:textColorHint="@color/filter_seek_bar_color"
        android:inputType="textPassword"
        android:id="@+id/passwordInput"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter Your Location"
                android:inputType="textCapCharacters"
                android:textColorHint="@color/filter_seek_bar_color"
                android:id="@+id/locationInput"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">
    <Button
        android:id="@+id/regBtn"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="70dp"
        android:layout_width="350dp"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:text="R e g i s t e r"
        android:textColor="@color/filter_seek_bar_color"
        android:textAllCaps="false"
        android:textSize="16sp"
        android:backgroundTint="#B0E7EF"
        android:background="@drawable/ic_pill"
        />
    </LinearLayout>
</LinearLayout>